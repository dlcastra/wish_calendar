<CalendarApp>:
    orientation: 'vertical'

    Image:
        id: background_image
        source: root.get_background_image()
        size_hint: (1,1)

    Label:
        id: date_label
        text: ""
        pos_hint: {"center_y": 0.85, "center_x": 0.5}
        font_size: "30sp"
        color: (11, 11, 11)

    Label:
        id: wish_label
        text: ""
        color: (11, 11, 11)
        font_size: "20sp"
        size: (400, 200)
        text_size: (400, None)
        halign: "center"
        valign: "middle"
        pos_hint: {"center_y": 0.70}