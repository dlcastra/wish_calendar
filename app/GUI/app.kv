<CalendarContent>:
    FloatLayout:
        orientation: 'vertical'

        Image:
            id: background_image
            source: root.get_background_image()
            size_hint: (1,1)

        Label:
            id: date_label
            text: ""
            pos_hint: {"center_y": 0.85, "center_x": 0.5}
            font_size: "30sp"
            color: (11, 11, 11)

        Label:
            id: wish_label
            text: ""
            color: (11, 11, 11)
            font_size: "23sp"
            size: (400, 200)
            text_size: (400, None)
            halign: "center"
            valign: "middle"
            pos_hint: {"center_y": 0.70}

        Spinner:
            id: options
            text: "Інші опції"
            values: ("Календар", "Нотатки")
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.25, "top": 0.1}
            on_text: app.on_spinner_select(self, self.text)

<NotesScreen>:
    FloatLayout:
        orientation: 'vertical'

        TextInput:
            id: notes_display
            readonly: True
            multiline: True
            size_hint: 1, 0.6
            pos_hint: {"center_x": 0.5, "top": 1}
            background_color: 230/255, 230/255, 230/255, 1


        TextInput:
            id: text_input
            hint_text: 'Нова замітка'
            size_hint: 1, 0.3
            pos_hint: {"center_x": 0.5, "top": 0.4}
            background_color: 230/255, 230/255, 230/255, 1

        Button:
            text: 'Додати'
            on_press: root.add_note()
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.75, "top": 0.1}

            Spinner:
                id: options
                text: "Інші опції"
                values: ("Календар", "Нотатки")
                size_hint: 0.5, 0.1
                pos_hint: {"center_x": 0.25, "top": 0.1}
                on_text: app.on_spinner_select(self, self.text)

<ScreenManagement>:
    MainScreen:
        name: 'main'
        id: main_screen
    NotesScreen:
        name: 'notes'
        id: notes_screen

<MainScreen>:
    CalendarContent:
        id: calendar_content

<NotesScreen>:
    Notes:
        id: notes_content